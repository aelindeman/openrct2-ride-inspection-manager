    "prepack": "yarn build",
    "prepublish": "yarn check"
  },
  "files": [
    "dist/"
  ],
  "author": {
    "name": "Alex Lindeman",
    "email": "aelindeman@users.noreply.github.com"
  },
  "license": "MIT",
  "dependencies": {
    "@rollup/plugin-typescript": "^5.0.0",
    "@typescript-eslint/parser": "^3.6.0",
    "@typescript-eslint/eslint-plugin": "^3.6.0",
    "eslint": "^7.4.0",
    "prettier": "=2.0.5",
    "rollup": "^2.11.0",
    "tslib": "^2.0.0",
    "typescript": "^3.9.0"
  }
}
